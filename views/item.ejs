<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= name %> (Item) | Simple Counter
    </title>

    <!-- Compiled and minified CSS -->
    <link rel="stylesheet" href="/stylesheets/materialize.min.css">

    <!-- Compiled and minified JavaScript -->
    <script src="/scripts/materialize.min.js"></script>
    <script src="/scripts/jquery-3.6.3.min.js" integrity="sha256-pvPw+upLPUjgMXY0G+8O0xUf+/Im1MZjXxxgOcBQBXU="
        crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    <link href="/stylesheets/main.css" rel="stylesheet">
    <script>
        function updateState() {
            const params = new Proxy(new URLSearchParams(window.location.search), {
                get: (searchParams, prop) => searchParams.get(prop),
            });
            if (params.deltag == "true") {
                $(".dt-hide").hide();
                $(".dt-show").show();
            } else {
                $(".dt-show").hide();
                $(".dt-hide").show();
            }
        }

        function insertUrlParam(key, value) {
            if (history.pushState) {
                let searchParams = new URLSearchParams(window.location.search);
                searchParams.set(key, value);
                let newurl = window.location.protocol + "//" + window.location.host + window.location.pathname + '?' + searchParams.toString();
                window.history.pushState({}, '', newurl);
            }
            updateState();
        }
    </script>
</head>

<body>
    <!-- Nav bar -->
    <header>
        <nav>
            <div class="nav-wrapper">
                <a href="/" class="brand-logo">Simple Counter</a>
                <a href="#" data-target="mobile-nav" class="sidenav-trigger"><i class="material-icons">menu</i></a>
                <!-- Main nav, hidden for small screens -->
                <ul id="desktop-nav" class="right hide-on-med-and-down">
                    <li><a href="/"><i class="material-icons left">home</i>Home</a></li>
                    <li><a href="/list"><i class="material-icons left">list</i>List</a></li>
                    <% if (isLoggedIn) { %>
                        <li><a class="btn red" href="/logout"> <i class="material-icons left">logout</i> Logout</a></li>
                        <li><a href="/profile"><i class="material-icons left">person</i>
                                <%=user.name %>
                            </a></li>
                        <% } else { %>
                            <li><a class="btn blue darken-2" href="/login"> <i class="material-icons left">login</i>
                                    Login</a></li>
                            <% } %>
                </ul>
            </div>
        </nav>
        <!-- Mobile nav menu, shown when menu button clicked -->
        <ul id="mobile-nav" class="sidenav">
            <li><a href="/"><i class="material-icons left">home</i>Home</a></li>
            <li><a href="/list"><i class="material-icons left">list</i>List</a></li>
            <% if (isLoggedIn) { %>
                <li><a class="btn red" href="/logout"> <i class="material-icons left">logout</i> Logout</a></li>
                <li><a href="/profile"><i class="material-icons left">person</i>
                        <%=user.name %>
                    </a></li>
                <% } else { %>
                    <li><a class="btn blue darken-2" href="/login"> <i class="material-icons left">login</i> Login</a>
                    </li>
                    <% } %>
        </ul>
    </header>

    <div class="container">
        <h2>Item detail: <%= name %>
        </h2>
        <a class="btn blue" href="/list">Back to list <i class="material-icons left">arrow_back</i></a>
        <a class="btn red" href="/item/<%= id %>/delete">Delete <i class="material-icons left">delete</i></a>
        <a class="btn waves-effect waves-light modal-trigger" id="rename-item" href="#edit">Rename/Edit
            <i class="material-icons right">edit</i></a>
        <table class="highlight" style="font-size:18px">
            <tbody>
                <tr>
                    <th>Description</th>
                    <td>
                        <%= description %>
                    </td>
                </tr>
                <tr>
                    <th>Count:</th>
                    <td>
                        <%= count %>
                    </td>
                </tr>
                <tr>
                    <th>Tags:
                        <a style="font-weight: 400" class="btn waves-effect waves-light modal-trigger right red dt-hide"
                            id="delete-tag" onclick="insertUrlParam('deltag','true')">Delete
                            <i class="material-icons right">delete</i></a>
                        <a style="font-weight: 400"
                            class="btn waves-effect waves-light modal-trigger right grey dt-show" id="delete-tag"
                            onclick="insertUrlParam('deltag','false')">Cancel
                            <i class="material-icons right">close</i></a>
                    </th>
                    <td>
                        <div class="item-tags">
                            <% if(tags) { for(let i=0; i < tags.length; i++) {%>
                                <a class="chip" href="/tag/<%= tags[i] %>">
                                    <%= tags[i] %>
                                </a>
                                <% } } %>
                                    <a class="btn-flat modal-trigger" id="add-tag" href="#addtag">Add
                                        <i class="material-icons left">add</i></a>
                        </div>
                    </td>
                </tr>
            </tbody>
        </table>

        <div class="modal" id="edit">

            <div class="modal-content">

                <h2>Edit item:</h2>
                <form method="post" action="/item/<%= id %>">
                    <div class="row">
                        <div class="input-field col s6">
                            <label for="nameInput">Item Name:</label>
                            <input type="text" name="name" id="nameInput" class="validate" data-length="32"
                                value="<%= name %>">
                        </div>
                        <div class="input-field col s6">
                            <label for="countInput">Item Count:</label>
                            <input type="number" name="count" id="countInput" value=<%=count %>>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col s12">
                            <label for="descriptionInput">Item Description:</label>
                            <textarea class="materialize-textarea" name="description"
                                id="descriptionInput"><%= description %></textarea>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button class="btn waves-effect waves-light" type="submit">
                            <i class="material-icons right">send</i>
                            Submit
                        </button>
                        <button class="modal-close waves-effect waves-green btn-flat">Cancel</button>
                    </div>
                </form>
            </div>

        </div>
    </div>
